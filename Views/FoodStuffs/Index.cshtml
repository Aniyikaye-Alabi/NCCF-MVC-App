                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FoodStuffId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FoodStuffId">Details</a> |
